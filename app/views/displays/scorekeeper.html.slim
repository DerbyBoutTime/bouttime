- content_for :nav do
  = render partial: "layouts/nav_bar"

#scorekeeper-view
  / teams
  .row.text-center
    / away
    .team-name.away.col-md-4.col-xs-4
      | AWAY
    .team-name.home.col-md-4.col-xs-4
      | HOME

  / stats
  .row.stats.text-center
    / current jam
    .stat.current-jam.col-md-4.col-xs-4
      | CURRENT JAM
    / game total
    .stat.game-total.col-md-4.col-xs-4
      | GAME TOTAL

  / jams
  .jams
    .row.headers
      .col-md-1.col-xs-1
        | Jam
      .col-md-3.col-xs-3
        | Skater
      .col-md-1.col-xs-1
      .col-md-1.col-xs-1.text-center
