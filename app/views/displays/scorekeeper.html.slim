          | 2
      .col-md-1.col-xs-1
        .three
          | 3
      .col-md-1.col-xs-1
        .four
          | 4
      .col-md-1.col-xs-1
        .five
          | 5
      .col-md-1.col-xs-1
        .six
          | 6

  / edit pass number
  .edit-pass-number
    .row
      .col-md-1.col-xs-1
        .cancel
          | X
      .col-md-2.col-xs-2
        .minus
          | MINUS
      .col-md-2.col-xs-2
        .plus
          | PLUS
      .col-md-1.col-xs-1
